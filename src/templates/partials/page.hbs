<div class="container {{context-class}}">
	<h1 class="page-heading">{{title}}</h1>
	<div class="row">
		<div class="col-xs-6">
			<div class="row">
				<div class="col-xs-9">
					<p class="message">{{message}}</p>
				</div>
			</div>
					<h1 class="page-subheading">{{slogan}}</h1>
		</div>
		<div class="col-xs-6 news">
			{{#each news}}
				<h2 class="news-heading">{{this.title}}</h2>
				<p class="news-content">{{this.content}}</p>
			{{/each}}
		</div>
	</div>
</div>